<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.musicapp.library">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Biblioteca"
        android:padding="12dp"
        android:textSize="18sp"
        android:layout_weight="0"
        android:textAlignment="center"/>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </ListView>
    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="@color/colorAccent">

        <ImageButton
            android:id="@+id/playListView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_dehaze_black_36dp" />

        <ImageButton
            android:id="@+id/playingView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_audiotrack_black_36dp" />

        <ImageButton
            android:id="@+id/libraryView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_library_music_black_36dp" />
    </LinearLayout>

</LinearLayout>
